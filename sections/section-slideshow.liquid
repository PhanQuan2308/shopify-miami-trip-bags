<!-- /sections/section-slideshow.liquid -->

{%- liquid
  assign desktop_height = section.settings.height
  assign mobile_height = section.settings.mobile_height
  assign animation_anchor = '#slideshow-' | append: section.id
  assign fade_option = true
  assign autoplay = section.settings.autoplay
  assign autoplay_speed = false
  assign show_arrows = section.settings.show_arrows
  assign slideshow_class = 'slideshow__slider'

  case section.settings.transition
    when 'slide'
      assign fade_option = false
      assign slideshow_class = slideshow_class | append: ' slideshow__slider--slide'
    when 'fade'
      assign slideshow_class = slideshow_class | append: ' slideshow__slider--fade'
    when 'zoom-out'
      assign slideshow_class = slideshow_class | append: ' slideshow__slider--zoom-out'
    when 'wipe'
      assign slideshow_class = slideshow_class | append: ' slideshow__slider--wipe'
  endcase

  if autoplay
    assign autoplay_speed = section.settings.autoplay_speed | times: 1000
  endif

  assign page_dots = false
  if settings.dots_style != 'hidden'
    assign page_dots = true
  endif
-%}

<div class="index-hero slideshow {{ desktop_height }} {{ mobile_height }}" data-section-id="{{ section.id }}" data-section-type="slideshow" data-overlay-header>
  <div class="{{ section.settings.width }}">
    {%- if section.blocks.size > 0 -%}
      <div id="slideshow-{{ section.id }}" class="{{ slideshow_class }}"
        data-slider="{{ section.id }}"
        data-slider-fullwidth
        data-options='{"fade": {{ fade_option }}, "autoPlay": {{ autoplay_speed }}, "pageDots": {{ page_dots }}, "prevNextButtons": {{ show_arrows }} }'
        data-dots="{{ settings.dots_style }}">
        {%- for block in section.blocks -%}
          {%- liquid
            assign desktop_image = block.settings.image
            assign mobile_image = block.settings.mobile_image
            assign overlay_color = block.settings.overlay_color
            assign overlay_opacity = block.settings.overlay_opacity | times: 0.01
            assign show_overlay_text = block.settings.show_overlay_text
            assign bg_color = block.settings.bg_color
            assign text_color = block.settings.color
            assign first_button_text = block.settings.first_button_text
            assign first_button_size = block.settings.first_button_size
            assign first_button_style = block.settings.first_button_style
            assign first_button_type = block.settings.first_button_type
            assign first_button_link = block.settings.first_button_link
            assign first_button_show_arrow = block.settings.first_button_show_arrow
            assign second_button_text = block.settings.second_button_text
            assign second_button_size = block.settings.second_button_size
            assign second_button_style = block.settings.second_button_style
            assign second_button_type = block.settings.second_button_type
            assign second_button_link = block.settings.second_button_link
            assign second_button_show_arrow = block.settings.second_button_show_arrow
            assign bg = ''
            assign text = ''

            if first_button_style == 'btn--text' and block.settings.first_button_show_arrow
              assign first_button_style = first_button_style | append: ' btn--text-no-underline'
            endif

            if second_button_style == 'btn--text' and block.settings.second_button_show_arrow
              assign second_button_style = second_button_style | append: ' btn--text-no-underline'
            endif

            assign hero_transparent = true
            unless bg_color == 'rgba(0,0,0,0)' or bg_color == blank
              assign hero_transparent = false
              assign bg = '--bg:' | append: bg_color | append: ';'
            endunless

            assign show_header_backdrop = false
            if hero_transparent and show_overlay_text
              assign show_header_backdrop = true
            endif

            unless text_color == 'rgba(0,0,0,0)' or text_color == blank
              assign text = '--text:' | append: text_color | append: ';'
            endunless

            if bg != blank or text != blank
              assign color_settings = 'style="' | append: bg | append: text | append: '"'
            endif

            assign animation_order = 2
          -%}

          <div class="slideshow__slide slideshow__slide--{{ block.id }} frame wide-image {{ section.settings.height }} {{ section.settings.mobile_height }}{% if forloop.first %} is-selected{% endif %}"
            {{ block.shopify_attributes }}
            {{ color_settings }}
            data-slide="{{ block.id }}"
            data-slide-index="{{ forloop.index0 }}"
            data-slide-text-color="{{ text_color }}">
            {%- if first_button_text == blank and first_button_link != blank -%}
              <a class="btn {{ first_button_size }} {{ first_button_style }} {{ first_button_type }}
                {% unless block.settings.first_button_hover_background %} btn--no-hover-bg{% endunless %}
                {% if block.settings.first_button_no_background %} btn--no-bg{% endif %}
                {% if block.settings.first_button_border_bottom %} btn--border-bottom{% endif %}"
                href="{{ first_button_link }}"
                style="
                  font-family: {{ block.settings.first_button_font_family }};
                  font-weight: {{ block.settings.first_button_font_weight }};
                  color: {{ block.settings.first_button_text_color }};
                "
              >
                <span>{{ first_button_text | escape }}</span>
                {%- if first_button_show_arrow -%}
                  {%- render 'icon-arrow-right' -%}
                {%- endif -%}
              </a>
            {%- else -%}
              <div class="hero__image frame__item">
            {%- endif -%}

              {%- unless show_overlay_text -%}
                <div class="image-overlay" style="--overlay-bg: {{ overlay_color }}; --overlay-opacity: {{ overlay_opacity }};"></div>
              {%- endunless -%}

              {%- liquid
                if forloop.first
                  assign fetchpriority = 'high'
                else
                  assign fetchpriority = 'auto'
                endif

                if mobile_image
                  assign desktop_modifier = 'desktop'
                else
                  assign desktop_modifier = ''
                endif

                render 'image-hero', image: desktop_image, desktop_height: desktop_height, mobile_height: mobile_height, modifier: desktop_modifier, fetchpriority: fetchpriority

                if mobile_image
                  assign mobile_modifier = 'mobile'
                  render 'image-hero', image: mobile_image, desktop_height: mobile_height, modifier: mobile_modifier, fetchpriority: fetchpriority
                endif
              -%}

            {%- if first_button_text == blank and first_button_link != blank -%}
              </a>
            {%- else -%}
              </div>
            {%- endif -%}

            {%- if block.settings.title != blank or block.settings.description != blank or first_button_text != blank -%}
              <div class="hero__content__wrapper frame__item {{ block.settings.flex_align_desktop }} {{ block.settings.flex_align_mobile }}{% if show_header_backdrop %} backdrop--linear{% endif %}"
                {% if show_header_backdrop %}
                  style="--header-overlay-color: {{ overlay_color }}; --header-overlay-opacity: {{ overlay_opacity }};"
                {% endif %}
                data-aos="hero"
                data-aos-anchor="{{ animation_anchor }}"
                data-aos-order="{{ animation_order }}">
                <div class="hero__content{% if hero_transparent %} hero__content--transparent{% if show_overlay_text %} backdrop--radial{% endif %}{% endif %}"{% if show_header_backdrop %} style="--overlay-bg: {{ overlay_color }}; --overlay-opacity: {{ overlay_opacity }};"{% endif %}>
                {%- unless block.settings.title == '' -%}
               
                  {% assign mobile_title_position = block.settings.mobile_title_position | default: 'overlay' %}
                  <div class="slideshow__title-block {{ mobile_title_position }}" {{ block.shopify_attributes }}>
                    {%- assign font_size_class = block.settings.heading_size | prepend: 'heading-size-' -%}
                    <h2 class="hero__title {{ font_size_class }}"
                    style="
                       --top: {{ block.settings.title_margin_top | default: 0 }}%;
                       --left: {{ block.settings.title_margin_left | default: 0 }}%;
                      position: absolute;
                      font-family: {{ block.settings.title_font_family }};
                      font-weight: {{ block.settings.title_font_weight }};
                      color: {{ block.settings.title_font_color }};
                      --mobile-top: {{ block.settings.mobile_title_margin_top | default: 0 }}%;
                      --mobile-left: {{ block.settings.mobile_title_margin_left | default: 0 }}%;
                      --mobile-align: {{ block.settings.mobile_title_align }};
                       --font-size-desktop: {{ block.settings.title_font_size_desktop | default: 2.5 }}rem;
                       --font-size-tablet: {{ block.settings.title_font_size_tablet | default: 2 }}rem;
                       --font-size-mobile: {{ block.settings.title_font_size_mobile | default: 2 }}rem;
                       --font-size-desktop-xl: {{ block.settings.title_font_size_desktop_xl | default: 3 }}rem;
                      --top-xl: {{ block.settings.title_margin_top_xl | default: 0 }}%;
                      --left-xl: {{ block.settings.title_margin_left_xl | default: 0 }}%;
                      --font-size-desktop-xx: {{ block.settings.title_font_size_desktop_xx | default: 2.2 }}rem;
                      --top-xx: {{ block.settings.title_margin_top_xx | default: 0 }}%;
                      --left-xx: {{ block.settings.title_margin_left_xx | default: 0 }}%;
                    ">
                    {{ block.settings.title | escape }}
                  </h2>
                  </div>
                  {%- assign animation_order = animation_order | plus: 1 -%}
                {%- endunless -%}

                  {%- unless block.settings.description == '' -%}
                    {%- assign font_size_class = block.settings.text_size | prepend: 'body-size-' -%}
                  
                    <p class="hero__description h5--body {{ font_size_class }}"
                      style="
                        top: {{ block.settings.description_margin_top | default: 0 }}%;
                        right: {{ block.settings.description_margin_right | default: 0 }}%;
                        bottom: {{ block.settings.description_margin_bottom | default: 0 }}%;
                        left: {{ block.settings.description_margin_left | default: 0 }}%;
                        position: absolute;
                        font-family: {{ block.settings.description_font_family }};
                        font-weight: {{ block.settings.description_font_weight }};
                        color: {{ block.settings.description_font_color }};
                        --font-size-desktop: {{ block.settings.description_font_size_desktop | default: 1.2 }}rem;
                        --font-size-tablet: {{ block.settings.description_font_size_tablet | default: 1.1 }}rem;
                        --font-size-mobile: {{ block.settings.description_font_size_mobile | default: 1 }}rem;
                        --max-width: {{ block.settings.description_max_width | default: 65 }}%;
                        --mobile-description-max-width: {{ block.settings.description_max_width_mobile | default: 90 }}%;
                        --text-align-desktop: {{ block.settings.description_text_align | default: 'left' }};
                        --text-align-mobile: {{ block.settings.description_text_align_mobile | default: 'left' }};
                        --mobile-description-top: {{ block.settings.description_mobile_margin_top | default: 0 }}%;
                        --mobile-description-left: {{ block.settings.description_mobile_margin_left | default: 0 }}%;
                        --mobile-description-align: {{ block.settings.description_mobile_align }};
                        --font-size-desktop-xl: {{ block.settings.description_font_size_desktop_xl | default: 1.5 }}rem;
                        --top-xl: {{ block.settings.description_margin_top_xl | default: 0 }}%;
                        --left-xl: {{ block.settings.description_margin_left_xl | default: 0 }}%;
                        --font-size-desktop-xx: {{ block.settings.description_font_size_desktop_xx | default: 1.1 }}rem;
                        --top-xx: {{ block.settings.description_margin_top_xx | default: 0 }}%;
                        --left-xx: {{ block.settings.description_margin_left_xx | default: 0 }}%;
                        "
                      data-aos="hero"
                      data-aos-anchor="{{ animation_anchor }}"
                      data-aos-order="{{ animation_order }}">
                      {{ block.settings.description }}
                    </p>
                 
                    {%- assign animation_order = animation_order | plus: 1 -%}
                  {%- endunless -%}

                  {%- if first_button_text != blank or second_button_text != blank -%}
                    <div class="hero__button-group"
                    
                       style="
                          --top: {{ block.settings.first_button_margin_top }}%;
                          --left: {{ block.settings.first_button_margin_left }}%;
                          --mobile-top: {{ block.settings.first_button_mobile_margin_top }}%;
                          --mobile-left: {{ block.settings.first_button_mobile_margin_left }}%;
                          --text-align-desktop: {{ block.settings.first_button_text_align }};
                          --text-align-mobile: {{ block.settings.first_button_mobile_align }};
                          --font-size-desktop-xl: {{ block.settings.first_button_font_size_desktop_xl | default: 1.2 }}rem;
                          --top-xl: {{ block.settings.first_button_margin_top_xl | default: 0 }}%;
                          --left-xl: {{ block.settings.first_button_margin_left_xl | default: 0 }}%;
                          --font-size-desktop-xx: {{ block.settings.first_button_font_size_desktop_xx | default: 1 }}rem;
                          --top-xx: {{ block.settings.first_button_margin_top_xx | default: 0 }}%;
                          --left-xx: {{ block.settings.first_button_margin_left_xx | default: 0 }}%;
                        "
                    >
                      {%- unless first_button_text == blank -%}
                        <div class="hero__button"

                        style="
                              top: {{ block.settings.first_button_margin_top }}%;
                              left: {{ block.settings.first_button_margin_left }}%;
                              max-width: {{ block.settings.first_button_max_width }}%;
                              font-family: {{ block.settings.first_button_font_family }};
                              font-weight: {{ block.settings.first_button_font_weight }};
                              color: {{ block.settings.first_button_text_color }};
                              --font-size-desktop: {{ block.settings.first_button_font_size_desktop }}rem;
                              --font-size-tablet: {{ block.settings.first_button_font_size_tablet }}rem;
                              --font-size-mobile: {{ block.settings.first_button_font_size_mobile }}rem;
                              --text-align-desktop: {{ block.settings.first_button_text_align }};
                              --text-align-mobile: {{ block.settings.first_button_mobile_align }};
                              --mobile-max-width: {{ block.settings.first_button_max_width_mobile }}%;
                              --font-size-desktop-xx: {{ block.settings.first_button_font_size_desktop_xx | default: 1 }}rem;
                              --top-xx: {{ block.settings.first_button_margin_top_xx | default: 0 }}%;
                              --left-xx: {{ block.settings.first_button_margin_left_xx | default: 0 }}%;
                            "
                          data-aos="hero"
                          data-aos-anchor="{{ animation_anchor }}"
                          data-aos-order="{{ animation_order }}">
                         <a class="btn {{ first_button_size }} {{ first_button_style }} {{ first_button_type }}
                          {% unless block.settings.first_button_hover_background %} btn--no-hover-bg{% endunless %}
                          {% if block.settings.first_button_no_background %} btn--no-bg{% endif %}
                          {% if block.settings.first_button_border_bottom %} btn--border-bottom{% endif %}"
                          href="{{ first_button_link }}"
                          style="
                            font-family: {{ block.settings.first_button_font_family }};
                            font-weight: {{ block.settings.first_button_font_weight }};
                            color: {{ block.settings.first_button_text_color }};
                          "
                        >
                          <span>{{ first_button_text | escape }}</span>
                          {%- if first_button_show_arrow -%}
                            {%- render 'icon-arrow-right' -%}
                          {%- endif -%}
                        </a>
                        </div>
                      {%- endunless -%}

                      {%- unless second_button_text == blank -%}
                        <div class="hero__button"
                          data-aos="hero"
                          data-aos-anchor="{{ animation_anchor }}"
                          data-aos-order="{{ animation_order }}">
                          <a class="btn {{ second_button_size }} {{ second_button_style }} {{ second_button_type }}"
                            href="{{ second_button_link | default: '#!' }}">
                            <span>{{ second_button_text | escape }}</span>

                            {%- if second_button_show_arrow -%}
                              {%- render 'icon-arrow-right' -%}
                            {%- endif -%}
                          </a>
                        </div>
                      {%- endunless -%}
                    </div>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size == 0 -%}
      <div class="slideshow__slide slideshow__slide--onboarding {{ section.settings.height }} {{ section.settings.mobile_height }}">
        <div class="text-center">{{ 'home_page.onboarding.no_content' | t }}</div>
        <div class="image-overlay" style="background-color: var(--bg-accent);"></div>
      </div>
    {%- endif -%}
  </div>
</div>

