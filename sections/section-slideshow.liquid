{%stylesheet %}
   .hero__description {
      max-width: 65%;
      word-wrap: break-word;
      text-align: left;
    }

    .hero__description {
      max-width: var(--max-width);
      text-align: var(--text-align-desktop);
    }

    .slideshow .hero__button-group {
      width: 100%;
      position: absolute;
      top: var(--top);
      left: var(--left);
      text-align: var(--text-align-desktop);
    }

     .slideshow .hero__button {
      position: absolute;
      top: var(--top);
      left: var(--left);
      max-width: var(--max-width);
      font-size: var(--font-size-desktop);
      text-align: var(--text-align-desktop);
      }
      .hero__button .btn {
        font-size: inherit !important;
      }
    .slideshow .hero__title {
      position: absolute;
      top: var(--top);
      left: var(--left);
      font-size: var(--font-size-desktop);
    }
    .slideshow .hero__content__wrapper a.btn--no-bg {
      background: transparent !important;
      border: none !important;
    }
    .slideshow .hero__content__wrapper a.btn--border-bottom {
      background: transparent !important;
      border: none !important;
      border-bottom: 2px solid currentColor !important;
      padding: 0.3rem 0 !important;
    }

    .btn--no-hover-bg,
    .btn--no-hover-bg:hover,
    .btn--no-hover-bg:focus {
      background: transparent !important;
      transition: none !important;
    }

    .btn--no-hover-bg::before,
    .btn--no-hover-bg::after {
      display: none !important;
      content: none !important;
    }



@media (min-width: 1400px) {
  .slideshow .hero__title,
  .slideshow .hero__description,
  .slideshow .hero__button {
    font-size: var(--font-size-desktop-xl) !important;
    top: var(--top-xl) !important;
    left: var(--left-xl) !important;
  }
}

@media (max-width: 1399px) and (min-width: 1200px) {
  .slideshow .hero__title,
  .slideshow .hero__description,
  .slideshow .hero__button {
    font-size: var(--font-size-desktop) !important;
  }
}

@media (max-width: 1199px) and (min-width: 1000px) {
  .slideshow .hero__title,
  .slideshow .hero__description,
  .slideshow .hero__button {
    font-size: var(--font-size-desktop-xx) !important;
    top: var(--top-xx) !important;
    left: var(--left-xx) !important;
  }
}

@media (max-width: 1000px) {
  .slideshow .hero__title,
  .slideshow .hero__description,
  .slideshow .hero__button {
    font-size: var(--font-size-tablet) !important;
  }
}

@media (max-width: 750px) {
  .slideshow .hero__button-group {
    width: 100%;
    position: relative;
    top: var(--mobile-top);
    left: var(--mobile-left);
    text-align: var(--text-align-mobile);
  }

  .slideshow .hero__title {
    width: 100%;
    top: var(--mobile-top) !important;
    left: var(--mobile-left) !important;
    text-align: var(--mobile-align);
    font-size: var(--font-size-mobile) !important;
  }

