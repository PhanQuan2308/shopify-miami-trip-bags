        },
          {
            "type": "color",
            "id": "title_font_color",
            "label": "Title text color",
            "default": "#FFFFFF"
          },
        {
          "type": "select",
          "id": "title_font_weight",
          "label": "Font weight for title",
          "default": "400",
          "options": [
            { "value": "300", "label": "Light (300)" },
            { "value": "400", "label": "Regular (400)" },
            { "value": "500", "label": "Medium (500)" },
            { "value": "600", "label": "Semi-bold (600)" },
            { "value": "700", "label": "Bold (700)" },
            { "value": "800", "label": "Extra-bold (800)" }
          ]
        },
        {
          "type": "header",
          "content": "Title"
        },
        {
          "type": "range",
          "id": "title_margin_top",
          "label": "Top",
          "min": -100,
          "max": 100,
          "step": 2,
          "unit": "%",
          "default": 0
        },
        {
          "type": "range",
          "id": "title_margin_left",
          "label": "Left",
          "min": -100,
          "max": 100,
          "step": 2,
          "unit": "%",
          "default": 0
        },
       
        {
          "type":  "range",
          "id":    "heading_size",
          "label": "Heading size",
          "min": 1,
          "max": 15,
          "step": 1,
          "default":11
        },
        {
          "type": "header",
          "content": "Title width XL"
        },
        {
          "type": "range",
          "id": "title_font_size_desktop_xl",
          "label": "Title font size (XL desktop)",
          "unit": "rem",
          "min": 1,
          "max": 10,
          "step": 0.2,
          "default": 3
        },
        {
          "type": "range",
          "id": "title_margin_top_xl",
          "label": "Title top (XL desktop)",
          "min": -100,
          "max": 100,
          "step": 2,
          "unit": "%",
          "default": 0
        },
        {
          "type": "range",
          "id": "title_margin_left_xl",
          "label": "Title left (XL desktop)",
          "min": -100,
          "max": 100,
          "step": 2,
          "unit": "%",
          "default": 0
        },
        {
          "type": "header",
          "content": "Title width XX"
        },
        {
          "type": "range",
          "id": "title_font_size_desktop_xx",
          "label": "Title font size (XX)",
          "unit": "rem",
          "min": 1,
          "max": 5,
          "step": 0.1,
          "default": 2.2
        },
        {
          "type": "range",
          "id": "title_margin_top_xx",
          "label": "Title top (XX)",
          "min": -100,
          "max": 100,
          "step": 2,
          "unit": "%",
          "default": 0
